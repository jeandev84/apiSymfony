{% extends 'base.html.twig' %}

{% block title %}Hello ApiController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                {% for maRegion in mesRegions %}
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{ maRegion.nom }}</div>
                        <div class="card-body">
                            <h4 class="card-title">{{ maRegion.code }}</h4>
                            <p class="card-text">
                                Some quick example text to build on the card title and make up the bulk
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
